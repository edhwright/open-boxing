---
import Header from "../components/header/index.svelte";
import HeadSEO from "../components/HeadSEO.astro";
interface Props {
	title: string;
	description: string;
	img: {
		url: string;
		width: string;
		height: string;
		alt: string;
	} | null;
}

const { title, description, img } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="all" />
		<HeadSEO title={title} description={description} img={img} />
		<script is:inline>
			const root = document.documentElement;
			const theme = localStorage.getItem("theme");
			if (theme === "dark") {
				root.classList.add("theme-dark");
			} else {
				root.classList.remove("theme-dark");
			}
		</script>
		<style is:global>
			:root {
				--sans-serif-fonts: -apple-system, BlinkMacSystemFont, "Segoe UI", "Liberation Sans", Helvetica, "Helvetica Neue", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
					sans-serif;
				--serif-fonts: Georgia, Times, "Times New Roman", Cambria, serif;
				--font-size-small: 12px;
				--line-height-small: 14px;
				--font-size-medium: 14px;
				--line-height-medium: 16px;
				--font-size-h1: 32px;
				--line-height-h1: 38px;
				--font-size-h2: 18px;
				--line-height-h2: 22px;
				--font-size-h3: 14px;
				--line-height-h3: 16px;
				--article-font-size-h1: 40px;
				--article-line-height-h1: 43px;
				--article-font-size-h2: 31px;
				--article-line-height-h2: 37px;
				--article-font-size-h3: 20px;
				--article-line-height-h3: 30px;
				--article-font-size-body: 18px;
				--article-line-height-body: 26px;
				--theme-text: rgb(18, 18, 18);
				--theme-text-secondary: rgb(94, 94, 94);
				--theme-bg: rgb(255, 255, 255);
				--theme-content-bg: rgb(251, 250, 250);
				--theme-border: rgb(234, 234, 234);
				--theme-callout-text: rgb(220, 220, 220);
				--theme-callout-bg: rgb(51, 51, 51);
				--theme-featured-bg: linear-gradient(to bottom, rgb(249, 239, 248) 0%, var(--theme-bg) 100%);
				--theme-gold: rgb(192, 179, 141);
				--theme-svg-icon-filter: invert(0);
				--ibu-text: rgb(255, 255, 255);
				--ibu-bg: rgb(92, 107, 192);
				--nysac-text: rgb(0, 65, 68);
				--nysac-bg: rgb(128, 214, 255);
				--wba-text: rgb(255, 255, 255);
				--wba-bg: rgb(51, 51, 51);
				--wbar-text: rgb(255, 255, 255);
				--wbar-bg: rgb(51, 51, 51);
				--wbas-text: rgb(255, 255, 255);
				--wbas-bg: rgb(51, 51, 51);
				--wbc-text: rgb(37, 37, 37);
				--wbc-bg: rgb(66, 190, 101);
				--ibf-text: rgb(255, 255, 255);
				--ibf-bg: rgb(218, 30, 40);
				--wbo-text: rgb(255, 255, 255);
				--wbo-bg: rgb(109, 76, 65);
				--ring-text: rgb(0, 0, 0);
				--ring-bg: rgb(192, 179, 141);
				--dark-mode-display: none;
				--light-mode-display: initial;
				color-scheme: light;
				font-family: var(--sans-serif-fonts);
			}

			:root.theme-dark {
				--theme-text: rgb(223, 227, 230);
				--theme-text-secondary: rgb(144, 161, 172);
				--theme-bg: rgb(28, 33, 38);
				--theme-content-bg: rgb(38, 43, 48);
				--theme-border: rgb(50, 55, 60);
				--theme-callout-text: rgb(223, 227, 230);
				--theme-callout-bg: rgb(23, 23, 23);
				--theme-featured-bg: linear-gradient(to bottom, rgb(35, 12, 30) 0%, var(--theme-bg) 100%);
				--theme-gold: rgb(192, 179, 141);
				--theme-svg-icon-filter: invert(1);
				--wba-bg: rgb(78, 78, 78);
				--wbar-bg: rgb(78, 78, 78);
				--wbas-bg: rgb(78, 78, 78);
				--dark-mode-display: initial;
				--light-mode-display: none;
				color-scheme: dark;
			}

			* {
				box-sizing: border-box;
				margin: 0;
			}

			body {
				background-color: var(--theme-bg);
				color: var(--theme-text);
				min-height: 100%;
				display: grid;
				grid-template-rows: auto 1fr auto;
			}

			main {
				margin: 0 12px;
			}

			footer {
				width: 100%;
				height: 80px;
			}

			@media (min-width: 1304px) {
				main {
					width: 1280px;
					margin: 0 auto;
				}
			}
		</style>
	</head>
	<body>
		<Header client:load />
		<slot />
		<footer></footer>
	</body>
</html>
