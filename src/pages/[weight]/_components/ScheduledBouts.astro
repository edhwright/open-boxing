---
import BoutContent from "../../../components/BoutContent.astro";
import type { Bout } from "../../../types";

interface Props {
	scheduledBouts: Bout[];
}

const { scheduledBouts } = Astro.props;
---

<div class="bouts">
	{
		scheduledBouts.map((bout) => (
			<div class="bouts__bout">
				<BoutContent bout={bout} useShortName={false} includeWeightClass={true} dateFormat="ddd D MMM YYYY" />
			</div>
		))
	}
</div>

<style>
	.bouts {
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(12, 1fr);
		margin-bottom: 1rem;
	}

	.bouts__bout {
		background-color: var(--theme-content-bg);
		padding: 12px;
		grid-column: span 6;
		border: 1px solid var(--theme-border);
		border-radius: 4px;
		height: 158px;
	}

	@media (min-width: 768px) {
		.bouts__bout {
			grid-column: span 4;
		}
	}
</style>
