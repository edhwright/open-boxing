---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Page Not Found" description="Page not found!" img={null}>
	<main class="content">
		<header class="header">
			<h1 class="header__title">Sorry, the page you requested was not found</h1>
		</header>

		<iframe
			width="560"
			height="315"
			src="https://www.youtube-nocookie.com/embed/pWIqZKhNY90"
			title="YouTube video player"
			frameborder="0"
			allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
			allowfullscreen></iframe>
	</main>
</Layout>

<style>
	.header {
		margin: 2rem auto;
	}

	.header__title {
		font-size: var(--font-size-h1);
		line-height: var(--line-height-h1);
	}

	iframe {
		max-width: 100%;
		border: none;
	}

	@media (min-width: 1280px) {
		.content {
			max-width: 956px;
			margin: 0 auto;
		}
	}
</style>
